.page {
  min-height: 100vh;
  background: #f7f7f7;
  padding-top: 0;
}

.page-content {
  padding: 32rpx;
}

.form {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 24rpx;
}

.form-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.label.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 4rpx;
}

.input {
  height: 72rpx;
  font-size: 28rpx;
}

.picker {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
}

.picker.placeholder {
  color: #999;
}

.button-group {
  margin-top: 48rpx;
  padding: 0 24rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.submit-btn[disabled] {
  background: #07c160;
  color: #fff;
  opacity: 0.6;
}

.btn-group {
  display: flex;
  gap: 30rpx;
  padding: 40rpx 30rpx;
}

.cancel-btn,
.submit-btn {
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  flex: 1;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: #07c160;
  color: #fff;
} 
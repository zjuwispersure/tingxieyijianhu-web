.page {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 40rpx;
}

/* 用户卡片样式 */
.user-card {
  background: #07c160;
  padding: 40rpx 32rpx;
  color: #fff;
  position: relative;
  margin-bottom: 24rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  border: 4rpx solid rgba(255, 255, 255, 0.4);
}

.info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.family-name {
  font-size: 28rpx;
  opacity: 0.9;
}

.login-hint {
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.login-btn {
  margin: 0;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #07c160;
  background: #fff;
  border-radius: 32rpx;
  width: fit-content;
}

/* 菜单卡片样式 */
.menu-card {
  margin: 0 24rpx;
  border-radius: 16rpx;
  background: #fff;
  overflow: hidden;
}

.menu-group {
  padding: 0 24rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.menu-icon.family {
  background: #ffd666;
}

.menu-icon.children {
  background: #87e8de;
}

.menu-title {
  font-size: 32rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
}

.menu-badge {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-right: 16rpx;
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: rotate(45deg);
  margin-right: 8rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 48rpx;
} 
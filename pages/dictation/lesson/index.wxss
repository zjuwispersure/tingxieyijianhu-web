.page {
  padding: 32rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

/* 顶部信息样式 */
.header {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.book-info {
  margin-bottom: 24rpx;
}

.book-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.book-version {
  font-size: 28rpx;
  color: #666;
}

.stats {
  display: flex;
  gap: 48rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 单元列表样式 */
.units {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.unit-header {
  padding: 24rpx 32rpx;
  background: #f0f7ff;
}

.unit-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 课文列表样式 */
.lessons {
  background: #fff;
}

.lesson-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.lesson-info {
  flex: 1;
}

.lesson-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.lesson-page {
  font-size: 24rpx;
  color: #999;
}


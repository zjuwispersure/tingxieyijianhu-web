<!--pages/dictation/select/index.wxml-->
<view class="page">
  <view class="weui-panel">
    <view class="weui-panel__hd">选择听写模式</view>
    <view class="weui-panel__bd">
      <view class="weui-cells">
        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="handleUnitDictation">
          <view class="weui-cell__bd">
            <view class="mode-title">按单元听写</view>
            <view class="mode-desc">按照课本单元顺序进行听写练习</view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="handleSmartDictation">
          <view class="weui-cell__bd">
            <view class="mode-title">智能听写</view>
            <view class="mode-desc">根据学习情况智能推荐词语进行听写</view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
      </view>
    </view>
  </view>
</view>
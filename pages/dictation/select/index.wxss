/* pages/dictation/select/index.wxss */

.page {
  padding: 32rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.child-panel {
  margin-bottom: 32rpx;
}

.child-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
}

.child-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.child-grade {
  font-size: 28rpx;
  color: #666;
}

.weui-panel {
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  background-color: #fff;
}

.weui-panel__hd {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #eee;
}

.weui-cell {
  padding: 32rpx;
}

.weui-label {
  font-size: 30rpx;
  color: #333;
  width: 180rpx;
}

.weui-select {
  font-size: 30rpx;
  color: #333;
}

.weui-cell_switch .weui-cell__bd {
  font-size: 30rpx;
  color: #333;
}

.weui-btn-area {
  margin: 48rpx 32rpx;
}

.weui-btn {
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
}

.weui-btn_primary {
  background-color: #07c160;
}

.mode-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 26rpx;
  color: #999;
}
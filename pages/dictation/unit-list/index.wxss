/* pages/dictation/unit-list/index.wxss */
.page {
  padding: 32rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.weui-panel {
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  background-color: #fff;
}

.weui-panel__hd {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #eee;
}

.weui-cell {
  padding: 24rpx 32rpx;
}

.weui-cell__bd {
  font-size: 30rpx;
  color: #333;
}

.unit-word-count {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.weui-loadmore {
  margin: 32rpx auto;
  width: 65%;
  text-align: center;
}

.weui-loading {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url("data:image/svg+xml;base64,") no-repeat;
  background-size: 100%;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
  color: #999;
}

.weui-loadmore_line {
  border-top: 1rpx solid #E5E5E5;
  margin-top: 48rpx;
}

.weui-loadmore__tips_in-line {
  position: relative;
  top: -0.9em;
  padding: 0 .55em;
  background-color: #FFFFFF;
  color: #999999;
}
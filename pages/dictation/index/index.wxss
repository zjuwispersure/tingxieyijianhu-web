.page {
  padding: 32rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 听写模式样式 */
.mode-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.mode-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.mode-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
}

.mode-info {
  flex: 1;
}

.mode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 26rpx;
  color: #666;
}


/* 统计区域样式 */
.stats-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
}

.stats-row:last-child {
  margin-bottom: 0;
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stats-value.highlight {
  color: #07c160;
}

.stats-label {
  font-size: 26rpx;
  color: #666;
}

/* 顶部孩子信息样式 */
.header {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.child-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.child-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #f0f0f0;
}

.child-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.child-detail {
  font-size: 26rpx;
  color: #666;
}

.child-detail text {
  margin-right: 16rpx;
}

/* 今日统计样式 */
.today-stats-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.today-stats {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.main-stat {
  text-align: center;
  padding: 0 32rpx;
}

.main-stat .stat-value {
  font-size: 48rpx;
  color: #07c160;
  font-weight: bold;
}

.main-stat .stat-label {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

.stat-divider {
  width: 2rpx;
  height: 80rpx;
  background: #e0e0e0;
  margin: 0 32rpx;
}

.sub-stats {
  flex: 1;
}

.sub-stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.sub-stat-item:last-child {
  margin-bottom: 0;
}

.sub-stat-item .label {
  font-size: 28rpx;
  color: #666;
}

.sub-stat-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.stats-divider {
  height: 1rpx;
  background: #e0e0e0;
  margin: 24rpx 0;
} 
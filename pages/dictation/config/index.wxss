.mode-cell {
  padding: 32rpx 24rpx;
}

.mode-options {
  display: flex;
  gap: 48rpx;
  margin-top: 16rpx;
}

.label-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.help-wrapper {
  position: relative;
  display: inline-flex;
  align-items: center;
}

.help-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #eee;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.help-tip {
  position: absolute;
  left: calc(100% + 12rpx);
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.85);
  color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 1.5;
  white-space: nowrap;
  z-index: 100;
  opacity: 0;
  visibility: hidden;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  pointer-events: none;
}

.help-tip.show {
  opacity: 1;
  visibility: visible;
}

.help-tip-arrow {
  position: absolute;
  left: -8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-top: 8rpx solid transparent;
  border-bottom: 8rpx solid transparent;
  border-right: 8rpx solid rgba(0, 0, 0, 0.85);
}


.page {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 20rpx 0;
}

.weui-cells__group {
  margin: 0 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.weui-cell {
  padding: 24rpx;
  background: #fff;
}

.weui-label {
  width: 180rpx;
  font-size: 30rpx;
  color: #333;
}

.weui-select {
  font-size: 30rpx;
  color: #333;
}

.bottom-button {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  padding: 0 32rpx;
}

.weui-btn {
  margin: 0;
}

/* 听写模式样式 */
.mode-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.mode-options {
  display: flex;
  gap: 48rpx;
}

.mode-option {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.radio-wrapper {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-option.selected .radio-wrapper {
  border-color: #07c160;
}

.radio-inner {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #07c160;
  opacity: 0;
}

.mode-option.selected .radio-inner {
  opacity: 1;
}

.mode-option text {
  font-size: 28rpx;
  color: #333;
}

.weui-input {
  text-align: right;
  padding-right: 16rpx;
  font-size: 30rpx;
  color: #333;
}

.weui-cell__ft {
  color: #666;
  font-size: 28rpx;
  margin-left: 8rpx;
  min-width: 32rpx;
}

/* 配置项样式 */
.config-cell {
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 32rpx;
}

.config-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.config-label text {
  font-size: 30rpx;
  color: #333;
}

.config-desc {
  font-size: 24rpx !important;
  color: #999 !important;
}

.config-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.weui-input {
  text-align: right;
  width: 120rpx;
  padding: 8rpx 16rpx;
  font-size: 30rpx;
  color: #333;
  background: #f8f8f8;
  border-radius: 6rpx;
}

.unit {
  color: #666;
  font-size: 28rpx;
  min-width: 32rpx;
}


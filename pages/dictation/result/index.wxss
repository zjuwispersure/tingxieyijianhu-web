/* pages/dictation/result/index.wxss */

.page {
  padding: 32rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 结果统计面板 */
.result-panel {
  margin-bottom: 32rpx;
}

.result-summary {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 48rpx 32rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.summary-label {
  font-size: 28rpx;
  color: #999;
}

.summary-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
}

.summary-value.correct {
  color: #07c160;
}

.summary-value.excellent {
  color: #07c160;
}

.summary-value.good {
  color: #10aeff;
}

.summary-value.poor {
  color: #fa5151;
}

.divider {
  width: 2rpx;
  height: 80rpx;
  background-color: #eee;
}

/* 词语列表 */
.word-list {
  padding: 0 32rpx;
}

.word-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #eee;
}

.word-item:last-child {
  border-bottom: none;
}

.word-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.word-text {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.word-pinyin {
  font-size: 24rpx;
  color: #999;
}

.word-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-group {
  display: flex;
  gap: 16rpx;
}

.mini-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 64rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
  background-color: #f7f7f7;
  color: #666;
  transition: all 0.3s;
}

.mini-btn.correct-btn {
  background-color: #07c160;
  color: #fff;
}

.mini-btn.wrong-btn {
  background-color: #fa5151;
  color: #fff;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.play-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: #f7f7f7;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.play-btn:active {
  background-color: #e0e0e0;
}

/* 底部按钮区域 */
.bottom-btn-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 32rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.weui-btn {
  margin: 0;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.weui-btn_primary {
  background-color: #07c160;
}

/* 提示信息 */
.tips-footer {
  margin-bottom: calc(152rpx + env(safe-area-inset-bottom));
  text-align: center;
}

.weui-footer__tips {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.weui-loadmore {
  margin: 48rpx auto;
}

/* 动画效果 */
.mini-btn {
  transition: transform 0.2s;
}

.mini-btn:active {
  transform: scale(0.95);
}

.play-btn {
  transition: transform 0.2s;
}

.play-btn:active {
  transform: scale(0.9);
}
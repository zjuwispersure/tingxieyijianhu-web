.page {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 20rpx;
}

/* 统计信息样式 */
.statistics {
  display: flex;
  justify-content: space-around;
  padding: 32rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.stat-value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

/* 单元列表样式 */
.unit-list {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.unit-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #eee;
}

.unit-info {
  flex: 1;
}

.unit-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.unit-progress {
  font-size: 26rpx;
  color: #999;
}

/* 设置按钮样式 */
.settings-btn {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.settings-icon {
  width: 40rpx;
  height: 40rpx;
} 
/* pages/dictation/practice/index.wxss */

.page {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 32rpx;
}

/* 准备页面样式 */
.ready-page {
  padding: 48rpx;
  background: #fff;
  border-radius: 16rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 48rpx;
}

.info {
  margin-bottom: 48rpx;
}

.info-item {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.start-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: #4c84ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

/* 练习页面样式 */
.practice-page {
  padding: 48rpx;
  background: #fff;
  border-radius: 16rpx;
  text-align: center;
}

.progress {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.play-status {
  margin-bottom: 48rpx;
}

.play-count {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.play-tip {
  font-size: 28rpx;
  color: #666;
}

.input-area {
  margin-top: 48rpx;
}

.handwriting-area {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.handwriting {
  border-radius: 16rpx;
  overflow: hidden;
}

.input-preview {
  margin-bottom: 32rpx;
  text-align: center;
}

.input-chars {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.char {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 36rpx;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.btn-group {
  display: flex;
  gap: 24rpx;
}

.clear-btn,
.replay-btn,
.submit-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.clear-btn,
.replay-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: #4c84ff;
  color: #fff;
}

.progress-info {
  text-align: center;
  margin-bottom: 48rpx;
}

.total-words {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.current-progress {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.play-count {
  font-size: 28rpx;
  color: #999;
}

.control-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 48rpx;
}

.control-btn {
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: #f5f5f5;
  color: #666;
}

/* 检查页面样式 */
.check-page {
  padding: 32rpx;
  background: #fff;
  border-radius: 16rpx;
}

.check-header {
  padding: 32rpx;
  background: #fff;
  margin-bottom: 32rpx;
}

.check-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.check-actions {
  display: flex;
  justify-content: flex-end;
}

.action-buttons {
  display: flex;
  gap: 20rpx;  /* 按钮之间的间距 */
}

.action-btn {
  font-size: 28rpx;
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  border: none;
  margin: 0;  /* 清除按钮默认边距 */
}

.action-btn.correct {
  background: #07c160;
  color: #fff;
}

.action-btn.wrong {
  background: #ff4d4f;
  color: #fff;
}

.word-list {
  background: #fff;
  padding: 0 32rpx;
}

.word-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  position: relative;
  border: 2rpx solid #f0f0f0;
}

.word-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.word-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.word-index {
  font-size: 28rpx;
  color: #999;
  min-width: 40rpx;
}

.word-text {
  font-size: 48rpx;
  color: #333;
}

.word-play {
  padding: 8rpx 16rpx;
  color: #4c84ff;
  font-size: 32rpx;
}

.word-pinyin {
  font-size: 28rpx;
  color: #999;
}

.word-hint {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.check-mark {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.check-mark.active {
  background: #07c160;
}

.check-icon {
  font-size: 32rpx;
  color: #fff;
  opacity: 0;
  transform: scale(0);
  transition: all 0.3s;
}

.check-mark.active .check-icon {
  opacity: 1;
  transform: scale(1);
}

.bottom-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}
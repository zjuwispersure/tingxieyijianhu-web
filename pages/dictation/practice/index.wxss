/* pages/dictation/practice/index.wxss */

.page {
  padding: 32rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 进度区域 */
.progress-area {
  padding: 32rpx;
  text-align: center;
}

.progress-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.progress-bar {
  padding: 0 32rpx;
}

/* 播放区域 */
.player-area {
  padding: 64rpx 32rpx;
  display: flex;
  justify-content: center;
}

.player-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.play-icon-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  transition: all 0.3s;
}

.play-icon-wrapper:active {
  background-color: #e0e0e0;
}

.play-icon {
  width: 80rpx;
  height: 80rpx;
}

/* 声波动画 */
.sound-waves {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  gap: 8rpx;
}

.wave {
  width: 4rpx;
  height: 32rpx;
  background-color: #07c160;
  animation: wave 1s ease-in-out infinite;
}

.wave:nth-child(2) {
  animation-delay: 0.2s;
}

.wave:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes wave {
  0%, 100% {
    height: 32rpx;
  }
  50% {
    height: 48rpx;
  }
}

.play-status {
  text-align: center;
}

.status-text {
  font-size: 28rpx;
  color: #999;
}

/* 设置信息 */
.settings-info {
  display: flex;
  justify-content: center;
  gap: 48rpx;
  padding: 32rpx;
  border-top: 1rpx solid #eee;
}

.setting-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.setting-icon {
  width: 36rpx;
  height: 36rpx;
}

.setting-item text {
  font-size: 28rpx;
  color: #666;
}

/* 底部提示 */
.tips-footer {
  margin-top: 64rpx;
}

.weui-footer__tips {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 播放状态动画 */
.player-content.playing .play-icon-wrapper {
  background-color: #e8f7ed;
}

.player-content.playing .play-icon {
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
/* pages/family/manage/index.wxss */

.page {
  padding: 32rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 面板头部 */
.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.member-count {
  font-size: 26rpx;
  color: #999;
}

/* 家庭信息 */
.family-info {
  padding: 32rpx;
}

.family-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.family-id {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #666;
}

.copy-btn {
  display: inline-flex;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 16rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #07c160;
  transition: all 0.3s;
}

.copy-btn:active {
  background-color: #e8f7ed;
}

.icon-copy {
  width: 28rpx;
  height: 28rpx;
}

/* 成员列表 */
.member-list {
  padding: 0 32rpx;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #eee;
}

.member-item:last-child {
  border-bottom: none;
}

.member-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.member-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background-color: #f0f0f0;
}

.member-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.role-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-weight: normal;
}

.role-tag.owner {
  background-color: #e8f7ed;
  color: #07c160;
}

.role-tag.member {
  background-color: #f0f0f0;
  color: #999;
}

.join-time {
  font-size: 24rpx;
  color: #999;
}

.member-actions {
  display: flex;
  gap: 16rpx;
}

.weui-btn_mini {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 64rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
}

.weui-btn_warn {
  background-color: #fa5151;
}

/* 操作区域 */
.action-area {
  margin-top: 48rpx;
  padding: 0 32rpx;
}

.weui-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  height: 88rpx;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 提示信息 */
.tips-footer {
  margin-top: 48rpx;
  text-align: center;
}

.weui-footer__tips {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.weui-loadmore {
  margin: 48rpx auto;
}

/* 动画效果 */
.copy-btn,
.weui-btn {
  transition: opacity 0.3s;
}

.copy-btn:active,
.weui-btn:active {
  opacity: 0.8;
}
<view class="page">
  <view class="weui-msg">
    <view class="weui-msg__icon-area">
      <image class="logo" src="/assets/images/logo.png" mode="aspectFit"></image>
    </view>
    
    <view class="weui-msg__text-area">
      <view class="weui-msg__title">小学语文听写</view>
      <view class="weui-msg__desc">让孩子的听写学习更有趣</view>
    </view>

    <view class="weui-msg__opr-area">
      <view class="weui-btn-area">
        <button 
          class="weui-btn weui-btn_primary" 
          bindtap="getUserProfile"
          loading="{{loading}}"
          disabled="{{loading}}"
        >
          <image class="wechat-icon" src="/assets/icons/wechat.png" mode="aspectFit"></image>
          微信一键登录
        </button>
      </view>
    </view>

    <view class="weui-msg__tips-area" style="margin-bottom: 20px;">
      <view class="weui-msg__tips">登录即表示同意《用户协议》和《隐私政策》</view>
    </view>

    <view class="weui-msg__extra-area" style="position: fixed; bottom: 20px; width: 100%; text-align: center;">
      <view class="weui-footer">
      </view>
    </view>
  </view>
</view>
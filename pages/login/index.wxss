/* pages/login/index.wxss */

.page {
  height: 100vh;
  background-color: #fff;
}

.weui-msg {
  padding: 120rpx 0 48rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
}

.weui-msg__icon-area {
  margin-bottom: 80rpx;
  padding: 0 80rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto;
  display: block;
}

.weui-msg__text-area {
  margin-bottom: 120rpx;
  padding: 0 64rpx;
  text-align: center;
}

.weui-msg__title {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
}

.weui-msg__desc {
  font-size: 30rpx;
  color: #999;
}

.weui-msg__opr-area {
  margin-bottom: 120rpx;
}

.weui-btn-area {
  padding: 0 80rpx;
}

.weui-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  height: 88rpx;
}

.weui-btn_primary {
  background-color: #07c160;
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 12rpx;
}

.weui-msg__tips-area {
  margin-bottom: 120rpx;
  padding: 0 80rpx;
  text-align: center;
}

.weui-msg__tips {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

.weui-msg__extra-area {
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  margin-top: auto;
}

.weui-footer {
  margin-bottom: 0;
}

.weui-footer__text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
}

/* 动画效果 */
.weui-btn {
  transition: opacity 0.3s;
}

.weui-btn:active {
  opacity: 0.8;
}
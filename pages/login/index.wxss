/* pages/login/index.wxss */

.page {
  height: 100vh;
  background-color: #fff;
}

.weui-msg {
  padding: 48rpx 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.weui-msg__icon-area {
  margin-bottom: 48rpx;
  padding: 0 80rpx;
}

.logo {
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto;
  display: block;
}

.weui-msg__text-area {
  margin-bottom: 64rpx;
  padding: 0 64rpx;
  text-align: center;
}

.weui-msg__title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.weui-msg__desc {
  font-size: 32rpx;
  color: #999;
}

.weui-msg__opr-area {
  margin-bottom: 48rpx;
}

.weui-btn-area {
  padding: 0 80rpx;
}

.weui-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 12rpx;
  height: 96rpx;
}

.weui-btn_primary {
  background-color: #07c160;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.weui-msg__tips-area {
  margin-bottom: 48rpx;
  padding: 0 80rpx;
  text-align: center;
}

.weui-msg__tips {
  font-size: 26rpx;
  color: #999;
}

.weui-msg__extra-area {
  padding-bottom: env(safe-area-inset-bottom);
}

.weui-footer {
  margin-bottom: 48rpx;
}

.weui-footer__text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 动画效果 */
.weui-btn {
  transition: opacity 0.3s;
}

.weui-btn:active {
  opacity: 0.8;
}
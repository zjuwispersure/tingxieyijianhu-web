/* pages/children/create/index.wxss */

.page {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 32rpx;
  box-sizing: border-box;
}

.weui-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.weui-form__text-area {
  text-align: left;
  padding: 0 0 48rpx;
}

.weui-form__title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.weui-form__desc {
  font-size: 28rpx;
  color: #999;
}

.weui-cells__group {
  margin-top: 0;
}

.weui-cells {
  background: none;
  margin-top: 0;
}

.weui-cell {
  padding: 24rpx 0;
  background: none;
  border-bottom: 1rpx solid #eee;
}

.weui-cell:last-child {
  border-bottom: none;
}

.weui-cell::before,
.weui-cell::after {
  display: none;
}

.weui-label {
  width: 180rpx;
  font-size: 30rpx;
  color: #333;
}

.weui-input {
  height: 48rpx;
  min-height: 48rpx;
  font-size: 30rpx;
  color: #333;
}

.weui-select {
  height: 48rpx;
  line-height: 48rpx;
  font-size: 30rpx;
  color: #333;
  padding-right: 48rpx;
}

.weui-cell_select .weui-cell__bd::after {
  width: 16rpx;
  height: 16rpx;
  border-width: 2rpx;
  border-color: #999;
}

.weui-btn {
  margin-top: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  background-color: #07c160;
  color: #fff;
}

.weui-btn:active {
  opacity: 0.8;
}

.weui-form__tips-area {
  margin-top: 32rpx;
  text-align: center;
}

.weui-form__tips {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

/* 选择器样式 */
.picker-placeholder {
  color: #999;
}

/* 必填项标记 */
.required::before {
  content: '*';
  color: #fa5151;
  margin-right: 4rpx;
}

/* 错误提示 */
.error-tips {
  font-size: 24rpx;
  color: #fa5151;
  margin-top: 8rpx;
}

/* 地区选择器样式 */
.region-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.region-text {
  color: #333;
}

.region-placeholder {
  color: #999;
}

/* 按钮组样式 */
.button-group {
  padding: 32rpx;
  display: flex;
  gap: 20rpx;
}

.button-group .weui-btn {
  flex: 1;
  margin: 0;
}

/* 禁用状态的输入框 */
.weui-input[disabled] {
  color: #999;
  -webkit-text-fill-color: #999;
  opacity: 1;
}
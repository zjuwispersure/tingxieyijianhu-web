/* pages/children/create/index.wxss */

.page {
  padding-top: 32rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 表单区域 */
.weui-form {
  padding: 0 32rpx;
}

.weui-form__text-area {
  padding: 0 0 48rpx;
  text-align: center;
}

.weui-form__title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.weui-form__desc {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 表单控件 */
.weui-cells__group_form .weui-cells {
  background-color: #fff;
  border-radius: 12rpx;
  margin-top: 0;
  overflow: hidden;
}

.weui-cell {
  padding: 24rpx 32rpx;
}

.weui-cell:before {
  left: 32rpx;
  right: 32rpx;
}

.weui-label {
  width: 180rpx;
  font-size: 30rpx;
  color: #333;
}

.weui-input {
  font-size: 30rpx;
  height: 60rpx;
  min-height: 60rpx;
}

.weui-select {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}

/* 按钮区域 */
.weui-form__opr-area {
  margin-top: 48rpx;
}

.weui-btn {
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.weui-btn_primary {
  background-color: #07c160;
}

/* 提示区域 */
.weui-form__tips-area {
  margin-top: 32rpx;
  text-align: center;
}

.weui-form__tips {
  font-size: 26rpx;
  color: #999;
}

/* 动画效果 */
.weui-cell_active:active {
  background-color: #f2f2f2;
}

.weui-btn:active {
  opacity: 0.8;
}
/* pages/children/list/index.wxss */

.page {
  padding: 32rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 添加孩子按钮 */
.add-child {
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  margin: 0 32rpx 32rpx;
  background-color: #fafafa;
  transition: all 0.3s;
}

.add-child:active {
  background-color: #f0f0f0;
}

.add-child-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
}

.add-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.add-icon {
  width: 48rpx;
  height: 48rpx;
}

.add-text {
  font-size: 28rpx;
  color: #999;
}

/* 孩子列表 */
.child-item {
  position: relative;
  margin: 0 32rpx;
  border-radius: 12rpx;
  background-color: #fff;
  margin-bottom: 24rpx;
  transition: all 0.3s;
}

.child-item:active {
  background-color: #f9f9f9;
}

.avatar-wrapper {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.avatar-wrapper.selected {
  background-color: #07c160;
}

.avatar-text {
  font-size: 36rpx;
  font-weight: 500;
  color: #666;
}

.avatar-wrapper.selected .avatar-text {
  color: #fff;
}

.weui-media-box__title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.weui-media-box__desc {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.textbook-version {
  margin-left: 16rpx;
  padding: 4rpx 12rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.weui-media-box__ft {
  margin-left: 32rpx;
}

.weui-btn_mini {
  display: inline-block;
  padding: 8rpx 24rpx;
  line-height: 1.8;
  font-size: 24rpx;
  border-radius: 8rpx;
}

/* 底部提示 */
.tips-footer {
  margin-top: 48rpx;
  padding: 0 32rpx;
}

.weui-footer__tips {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 加载状态 */
.weui-loadmore {
  margin: 48rpx auto;
}

.weui-loadmore_line {
  margin-top: 64rpx;
  margin-bottom: 64rpx;
}

.weui-loadmore__tips {
  font-size: 28rpx;
  color: #999;
  background-color: #f7f7f7;
  padding: 0 32rpx;
}
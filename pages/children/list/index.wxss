/* pages/children/list/index.wxss */

.page {
  padding: 20rpx 0;
  min-height: 100vh;
  box-sizing: border-box;
  background: #f7f7f7;
}

.weui-cells__group {
  margin: 0 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.weui-cell {
  padding: 24rpx;
  background: #fff;
}

.child-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.child-info {
  font-size: 28rpx;
  color: #666;
}

.empty-state {
  padding: 60rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.bottom-button {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  padding: 0 32rpx;
}

.weui-btn {
  margin: 0;
}

/* 单选框样式 */
.radio-wrapper {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio-wrapper.selected {
  border-color: #07c160;
}

.radio-inner {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #07c160;
  opacity: 0;
}

.radio-wrapper.selected .radio-inner {
  opacity: 1;
}

/* 孩子信息布局 */
.child-info-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.child-info-main {
  flex: 1;
  min-width: 0;
  padding-right: 32rpx;
}

/* 编辑按钮样式 */
.edit-btn-wrapper {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: auto;
}

.weui-cell__ft {
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.edit-btn {
  margin: 0;
  padding: 2rpx 8rpx;
  min-width: 44rpx;
  font-size: 20rpx;
  line-height: 1.4;
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
  border-radius: 4rpx;
  text-align: center;
}

.edit-btn::after {
  display: none;
}

.weui-cell__ft_in-access {
  width: 12rpx;
  height: 12rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #b2b2b2;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  margin-left: 8rpx;
}

.region-text {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.region-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
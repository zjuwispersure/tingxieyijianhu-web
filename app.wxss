page {
  --primary-color: #07c160;
  --text-color: #333333;
  --text-gray: #999999;
  --border-color: #eeeeee;
  --background-color: #f7f7f7;
}

.container {
  min-height: 100vh;
  background-color: var(--background-color);
  padding: 20rpx;
}

.header {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0;
}

button {
  background: var(--primary-color);
  color: #fff;
  border-radius: 8rpx;
}

.loading {
  text-align: center;
  color: var(--text-gray);
  padding: 30rpx;
}

.empty-tip {
  text-align: center;
  color: var(--text-gray);
  padding: 60rpx 30rpx;
}